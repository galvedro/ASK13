<?xml version="1.0"?>

<PropertyList>
  <path>ask13_shadow.ac</path>

  <effect>
    <inherits-from>Effects/shadow-vol</inherits-from>
    <object-name>ask13_shadow</object-name>
  </effect>

  <animation>
    <type>select</type>
    <object-name>ask13_shadow</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>
 
  <animation>
    <type>noshadow</type>
    <object-name>ask13_shadow</object-name>
  </animation>
 
  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>ask13_shadow</object-name>
    <property>/orientation/pitch-deg</property>
    <factor>-1.0</factor>
    <axis>
      <y>1</y>
    </axis>
  </animation>
 
  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>ask13_shadow</object-name>
    <property>/orientation/roll-deg</property>
    <factor>1.0</factor>
    <axis>
      <x>1</x>
    </axis>
  </animation>
 
</PropertyList>

